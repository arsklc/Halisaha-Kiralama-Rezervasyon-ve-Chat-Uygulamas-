    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextSaha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Saha" />

    <EditText
        android:id="@+id/editTextSaat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Saat" />

    <EditText
        android:id="@+id/editTextMevki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mevki" />

    <EditText
        android:id="@+id/editTextNot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Not" />

    <Button
        android:id="@+id/buttonPublish"
